pipeline {
    agent any

    stages {
        stage('clone') {
            steps {
            sh 'git clone https://github.com/spring-projects/spring-petclinic.git'
            git 'https://github.com/spring-projects/spring-petclinic.git'
            }
        }
        stage('build') {
            steps {
              dir("/var/lib/jenkins/workspace/pipeline/spring-petclinic"){
                sh './mvnw package'
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
